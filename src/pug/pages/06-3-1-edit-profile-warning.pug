              //END   specialization

              //BEGIN working days
              .row
                h4.h4 Working days
                .edit-profile__working-days-subtitle.tech-text-s Attention! The working hours there should also be a choice of the time of day according to the American model: AM and PM
              .edit-profile__body-item
                .row
                  .col-12.col-lg-6
                    +selectDay
                  .col-12.col-lg-6.edit-profile__select-time
                    .row
                      .col-5
                        +inputMix('From')
                      .col-5
                        +inputMix('To')
                      .col-2
                        .edit-profile__input-del
                          +svg('trash')
                .row
                  .col-12.col-lg-6
                    +selectDay
                  .col-12.col-lg-6.edit-profile__select-time
                    .row
                      .col-5
                        +inputMix('From')
                      .col-5
                        +inputMix('To')
                      .col-2
                        .edit-profile__input-del
                          +svg('trash')
                .row
                  .tech-text-link.edit-profile__add-working-day Add one more
              //END   working days

              //BEGIN salary
              .edit-profile__salary
                .row
                  h4.h4.edit-profile__salary-title Salary per hour
                  include ../elements/ui-single-slider
              //END   salary

              //BEGIN footer
              .edit-profile__footer
                .row
                  .col-12.col-lg-4
                    a(href="#").btn.edit-profile__footer-del
                      +svg('trash')
                      span Delete profile
                  .col-6.col-lg-4
                    a(href="#").btn.btn--white-and-black
                      span Cancel
                  .col-6.col-lg-4
                    a(href="#").btn.btn--gradient
                      span Save
              //END   footer
            //END   body
      //END   edit-profile
    //end content
    include ../elements/banners/cancel-warning-banner
    include ../sections/bottom-sections-wrap
