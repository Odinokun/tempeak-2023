extends ../_template

block variables
  - let title       = '06.3 Edit profile CO / Tempeak'
  - let description = 'TemPeak'

  - let breadcrumbs     = 'TemPeak breadcrumbs'
  - let headerClass = 'reddy'

mixin selectDay()
  .select
    select
      option(value="Day") Day
      option(value="Monday") Monday
      option(value="Tuesday") Tuesday
      option(value="Wednesday") Wednesday
      option(value="Thursday") Thursday
      option(value="Friday") Friday
      option(value="Saturday") Saturday
      option(value="Sunday") Sunday
    span.select__placeholder Day
    span.select__error Some error text

mixin inputMix(place)
  .input
    input(placeholder='' + place)
    span.input__placeholder #{place}
    span.input__error Some error text

block content
  .main-wrap
    include ../sections/headers/header-co-ava

    //begin content
    main.main
      //BEGIN page-top
      .page-top.page-top--co
        .container
          .row
            a(href="#").page-top__back-link
              .page-top__back-link-btn
                +svg('slider-arr')
              span.cta.page-top__back-link-text Back
            h1.h1.page-top__title Edit profile
      //END   page-top

      //BEGIN edit-profile
      form.edit-profile
        .container
          .row
            //BEGIN card
            .edit-profile__card.col-12.col-md-4.col-xl-3
              h4.h4 Photo and documents
              //BEGIN ava
              .edit-profile__card-ava
                img(src="assets/img/person-no-ava.jpg" alt="no ava")
                .edit-profile__card-ava-bg(style="background-image:url('assets/img/profile-ava.jpg')")
                .edit-profile__card-ava-text
                  .cta Upload your photo
                  .tech-text-s (jpg, jpeg, png, gif)<br>maximal size must be less than 2 MB
                .tech-text-s.edit-profile__card-ava-footer If the photo is not loaded, a stub is displayed.
                input(type="file").edit-profile__card-ava-input
                .edit-profile__card-ava-del
                  +svg('trash')
              //END   ava
              +inputMix('License number')
              include ../elements/download-edit
              include ../elements/download-edit
              .download-footer.tech-text-s pdf, doc, Docx, txt, jpeg, png, and the size less than 5 MB
            //END   card

            //BEGIN body
            .edit-profile__body.col-12.col-lg-8.ms-auto
              //BEGIN personal
              .row
                h4.h4 Personal information
              .edit-profile__body-item
                .row
                  .col-12.col-lg-6
                    +inputMix('First name')
                  .col-12.col-lg-6
                    +inputMix('Last name')
                  .col-12.col-lg-6
                    +inputMix('What school you attend')
                  .col-12.col-lg-6
                    .select
                      select
                        option(value="Date of graduation") Date of graduation
                        option(value="2000") 2000
                        option(value="2001") 2001
                        option(value="2002") 2002
                        option(value="2003") 2003
                        option(value="2004") 2004
                        option(value="2005") 2005
                        option(value="2006") 2006
                        option(value="2007") 2007
                        option(value="2008") 2008
                        option(value="2009") 2009
                        option(value="2010") 2010
                        option(value="2011") 2011
                        option(value="2012") 2012
                        option(value="2013") 2013
                        option(value="2014") 2014
                        option(value="2015") 2015
                      span.select__placeholder Date of graduation
                      span.select__error Some error text
                  .col-12.col-lg-6
                    +inputMix('Email')
                  .col-12.col-lg-6
                    +inputMix('Phone')
                  .col-12.col-lg-6
                    .input.calendar-input-single
                      input(placeholder='Birthday')
                      span.input__placeholder Birthday
                      span.input__error Some error text
                  .col-12.col-lg-6
                    .select.direct-form__select
                      select
                        option(value="Years of experience") Years of experience
                        option(value="< 1 year") < 1 year
                        option(value="1 - 5 years") 1 - 5 years
                        option(value="5 - 10 years") 5 - 10 years
                        option(value="> 10 years") > 10 years
                      span.select__placeholder Years of experience
                      span.select__error Some error text
              //END   personal

              //BEGIN address
              .row
                h4.h4 Address
              .edit-profile__body-item
                .row
                  .col-12.col-lg-6
                    .select
                      select
                        option(value="State") State
                        option(value="Alabama") Alabama
                        option(value="Nebraska") Nebraska
                        option(value="Virginia") Virginia
                        option(value="New Hampshire") New Hampshire
                        option(value="Massachusetts") Massachusetts
                        option(value="Rhode Island") Rhode Island
