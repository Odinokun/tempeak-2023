extends ../_template

block variables
  - let title       = '08.4 Profile CO request review / Tempeak'
  - let description = 'TemPeak'

  - let breadcrumbs     = 'TemPeak breadcrumbs'
  - let headerClass = 'reddy'

block content
  .main-wrap
    include ../sections/headers/header-bo-ava

    //begin content
    main.main
      //BEGIN page-top
      .page-top.page-top--bo
        .container
          .row
            .page-top__verified
              //BEGIN verified
              .person-row__verified
                .person-row__verified-security-icon
                  +svg('security')
                .cta Verified
                .body-s by Tempeak
                .person-row__verified-info-icon
                  +svg('info')
                  .person-row__verified-info-tooltip
                    | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eaque libero magnam obcaecati quam tempore. Doloribus ipsam itaque magni quidem similique.
              //END   verified
      //END   page-top

      //BEGIN profile
      .profile
        .container
          //BEGIN profile__left
          .profile__left
            //BEGIN profile-card
            .profile-card
              .profile-card__ava
                img(src="assets/img/profile-ava.jpg" alt="avatar")
              h3.h3.profile-card__title George Smith
              .cta.profile-card__position RDA General dentist
              .body-s.profile-card__experience 5-10 years of experience
              .profile-card__rating
                //BEGIN rating
                .person-row__rating
                  .person-row__rating-text.cta Rate:
                  .rating(data-rating="4.8")
                    .rating__scale
                      .rating__scale-bg
                    .rating__text.cta
                      strong 4.8
                      a(href='#') (75)
                //END   rating

              a(href="#").btn.btn--highlight.profile-card__btn
                span Send request

              a(href="#" target="_blank" rel="nofollow noopener noreferrer").profile-card__download-link
                .profile-card__download-link-icon
                  +svg('file')
                .profile-card__download-link-text.cta Download Resume
              a(href="#" target="_blank" rel="nofollow noopener noreferrer").profile-card__download-link
                .profile-card__download-link-icon
                  +svg('file')
                .profile-card__download-link-text.cta Download License

              .profile-card__last-visit.tech-caps-text Was online 2 hours ago
            //END   profile-card
          //END   profile__left

          //BEGIN profile-body
          .profile-body
            //BEGIN banner
            .profile-body__banner.profile-body__banner--warning
              .profile-body__banner-icon
                img(src="assets/img/anim-gif/error.gif" alt="Tempeak")
              .profile-body__banner-text Additional information will be available after confirmation of the request by the contractor. Please send your request.
            //END   banner

            include ../sections/profile/salary
            include ../sections/profile/schedule

            //BEGIN profile-body__messages
            .profile-body__messages
              h3.h3.messages-title Messages
              .messages
                include ../sections/profile/message-top
            //END   profile-body__messages
          //END   profile-body
      //END   profile

    //end content
    include ../sections/bottom-sections-wrap-no-btn
