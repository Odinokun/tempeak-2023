extends ../_template

block variables
  - let title       = '08.7 Profile BO request in waiting status / Tempeak'
  - let description = 'TemPeak'

  - let breadcrumbs     = 'TemPeak breadcrumbs'
  - let headerClass = 'reddy'

block content
  .main-wrap
    include ../sections/headers/header-bo-ava

    //begin content
    main.main
      //BEGIN page-top
      .page-top.page-top--bo
        .container
          .row
            .page-top__verified
              //BEGIN verified
              .person-row__verified
                .person-row__verified-security-icon
                  +svg('security')
                .cta Verified
                .body-s by Tempeak
                .person-row__verified-info-icon
                  +svg('info')
                  .person-row__verified-info-tooltip
                    | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eaque libero magnam obcaecati quam tempore. Doloribus ipsam itaque magni quidem similique.
              //END   verified
      //END   page-top

      //BEGIN profile
      .profile
        .container
          //BEGIN profile__left
          .profile__left
            //BEGIN profile-card
            .profile-card
              .profile-card__ava
                img(src="assets/img/profile-bo-ava.jpg" alt="avatar")
              h3.h3.profile-card__title Baltimore Dental Group
              .cta.profile-card__position Darrell Steward
              a(href="#").body-s.profile-card__experience baltimoredentalgroup.com
              .profile-card__rating
                //BEGIN rating
                .person-row__rating
                  .person-row__rating-text.cta Rate:
                  .rating(data-rating="4.8")
                    .rating__scale
                      .rating__scale-bg
                    .rating__text.cta
                      strong 4.8
                      a(href='#') (75)
                //END   rating

              .profile-card__status
              .profile-card__last-visit.profile-card__last-visit--bo.tech-caps-text Was online 2 hours ago
            //END   profile-card

            //BEGIN profile-ad
            .profile-ad
              .profile-ad__close
                +svg('close')
              .profile-ad__img
                img(src="assets/img/bg-profile-ad.jpg" alt="Tempeak")
              .profile-ad__info
                .profile-ad__top-text.tech-caps-text special offer
                h4.h4.profile-ad__title 15% on online order in DentalGroup.com
              .profile-ad__bottom-text <a href="#">advertising</a> by tempeak
            //END   profile-ad
          //END   profile__left

          //BEGIN profile-body
          .profile-body
            include ../sections/profile/text
            include ../sections/profile/info-sm
            include ../sections/profile/schedule-sm
            include ../sections/profile/subscription
          //END   profile-body
      //END   profile

    //end content
    include ../sections/bottom-sections-wrap
