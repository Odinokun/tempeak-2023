                    option(value="Subject 2") Subject 2
                  span.select__placeholder Subject
                  span.select__error Some error text
                .input.contacts__form-input
                  input(placeholder='Email')
                  span.input__placeholder Email Address
                  span.input__error Some error text
                .input.contacts__form-input.error
                  input(placeholder='Your Name')
                  span.input__placeholder Your Name
                  span.input__error Some error text
                .input.contacts__form-input
                  input(placeholder='Phone')
                  span.input__placeholder Phone
                  span.input__error Some error text
                .textarea.contacts__form-textarea
