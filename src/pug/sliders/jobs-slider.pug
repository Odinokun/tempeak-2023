mixin slide(logo, title)
  .swiper-slide.jobs-slider__slide
    //BEGIN clinic-card
    .clinic-card
      //BEGIN clinic-card__header
      .clinic-card__header
        .clinic-card__logo
          img(src="assets/img/brands-logo/" + logo + ".svg" alt="logo")
        .clinic-card__header-label.clinic-card__header-label--new
          span new
      //END   clinic-card__header

      h4.clinic-card__title.h4 #{title}

      //BEGIN rating
      .clinic-card__rating
        .clinic-card__rating-icon
          +svg('star')
        .clinic-card__rating-num 4.75
        a(href="#").clinic-card__rating-link (48)
      //END   rating

      //BEGIN clinic-card__info
      .clinic-card__info
        .clinic-card__info-item
          span.tech-text-s Specialty:
          span.body-m DDS, DMD
        .clinic-card__info-item
          span.tech-text-s Address:
          span.body-m Baltimore, MD 21203
      //END   clinic-card__info

      //BEGIN clinic-card__footer
      .clinic-card__footer
        a(href="#").double-btn
          span.cta More details
        .clinic-card__footer-date
          .clinic-card__footer-date-icon
            +svg('clock')
          .clinic-card__footer-date-text.body-s 10 hours ago
      //END   clinic-card__footer
    //END   clinic-card

//BEGIN jobs-slider
.jobs-slider#jobs-slider
  .swiper-wrapper
    +slide('01', 'Baltimore Dental Group')
    +slide('02', 'Moderna Dental')
    +slide('03', 'Dental Wellness of Clifton')
    +slide('04', 'Dental W12')
    +slide('01', 'Baltimore Dental Group')
    +slide('02', 'Moderna Dental')
    +slide('03', 'Dental Wellness of Clifton')
    +slide('04', 'Dental W12')
  .swiper-button-prev
    +svg('slider-arr')
  .swiper-button-next
    +svg('slider-arr')
//END   jobs-slider