mixin about(icon, descr)
  .col-12.col-md-6.col-lg-3
    .about-sponsors__item
      .about-sponsors__icon
        img(src="assets/img/anim-gif/" + icon + ".gif" alt="icon")
      h4.h4.about-sponsors__descr #{descr}


//BEGIN about-sponsors
.about-sponsors
  .container
    .row
      h2.h2.about-sponsors__title Tempeak offers sponsorship opportunities. Our sponsorship program is designed for businesses or organizations that want to support the dental industry and promote their brand while aligning with a reputable company like Tempeak.
      h4.h4.about-sponsors__subtitle To become a Tempeak sponsor, you will need to meet certain qualifications and go through a brief application process. These requirements may include having a strong understanding of the dental industry, a proven track record of success, and the ability to effectively communicate with clients and dental professionals.
    .row
      +about('podcasts', 'Recognition and visibility on our website and marketing materials')
      +about('world-globe', 'Access to our network of dental professionals and clients')
      +about('groups', 'The ability to showcase your products or services to a targeted audience')
      +about('money-cash', 'A chance to build brand awareness and credibility in the dental industry')
//END   about-sponsors